<div class="card px-3 pb-5">
  <p style="color: green"><%= notice %></p>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center my-3">
      <h1>Motores</h1>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <%= link_to "Crear Nuevo Motor", new_motor_path, class: "btn btn-outline-success" %>
        <% end %>
      <% end %>
    </div>
    <div id="motors">
      <div class="row">
        <% @motors.each do |motor| %>
          <%= render motor %>
        <% end %>
      </div>
    </div>
    <div class="pt-3">
      <%= will_paginate @motors, list_classes: %w(pagination justify-content-center),
        previous_label: '&laquo;', next_label: '&raquo;', 
        renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</div>
