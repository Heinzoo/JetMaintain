<div class="card px-3 pb-5">
  <p style="color: green"><%= notice %></p>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center my-3">
      <h1>Mantenimientos</h1>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <%= link_to "Crear Nuevo Mantenimiento", new_mantenimiento_path, class: "btn btn-outline-success" %>
        <% end %>
      <% end %>
    </div>
    <div id="mantenimientos">
      <div class="row">
        <% @mantenimientos.each do |mantenimiento| %>
          <%= render mantenimiento %>
        <% end %>
      </div>
    </div>
    <div class="pt-3">
      <%= will_paginate @mantenimientos, list_classes: %w(pagination justify-content-center),
        previous_label: '&laquo;', next_label: '&raquo;', 
        renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</div>
